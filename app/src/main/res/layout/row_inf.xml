<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_listview">

        <ImageView
            android:id="@+id/TV_imageCompany"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="16dp"
            android:contentDescription="TODO"
            android:src="@mipmap/ic_launcher"
            tools:ignore="ContentDescription,HardcodedText,ImageContrastCheck" />

        <TextView
            android:id="@+id/nameCompany"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="82dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:gravity="center_vertical"
            android:text="name"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:ignore="HardcodedText,RtlCompat" />

        <TextView
            android:id="@+id/TV_nameJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="32dp"
            android:gravity="center_vertical"
            android:text="wanted"
            android:textColor="#EF0505"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/TV_timeLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/TV_nameJob"
            android:layout_marginStart="50dp"
            android:layout_marginTop="38dp"
            android:layout_marginBottom="18dp"
            android:text="time"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="HardcodedText,MissingConstraints" />

        <TextView
            android:id="@+id/TV_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/TV_nameJob"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="80dp"
            android:text="address"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/TV_nameJob"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/location_icon" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/TV_nameJob"
            android:layout_marginStart="25dp"
            android:layout_marginTop="38dp"
            android:src="@drawable/time_icon" />

        <ImageView
            android:id="@+id/saveJob"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@+id/TV_nameJob"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            app:srcCompat="@drawable/save_icon" />

    </RelativeLayout>

</RelativeLayout>
