<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkActivity"
    android:orientation="vertical"
    android:background="@drawable/work_background"
    android:weightSum="10">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/job_icon"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:fontFamily="@font/harabara"
        android:gravity="center"
        android:text="WEWORK"
        android:textColor="@color/colorAccent"
        android:textSize="40sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/feed_lyt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/news_icon"
                android:id="@+id/feedButton"
                android:layout_margin="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Jobs"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_toEndOf="@id/feedButton"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/search_lyt"
            android:layout_width="wrap_content"
            android:layout_below="@+id/feed_lyt"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="80dp"
                android:layout_margin="20dp"
                android:layout_height="80dp"
                android:background="@drawable/search"
                android:id="@+id/search_btn" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_toEndOf="@id/search_btn"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/personal_lyt"
            android:layout_width="wrap_content"
            android:layout_below="@+id/search_lyt"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="80dp"
                android:layout_margin="20dp"
                android:layout_height="80dp"
                android:background="@drawable/woman"
                android:id="@+id/personal_btn"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Account"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_toEndOf="@id/personal_btn"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/setting_lyt"
            android:layout_width="wrap_content"
            android:layout_below="@+id/personal_lyt"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/setting_btn_menu"
                android:layout_width="80dp"
                android:layout_margin="20dp"
                android:layout_height="80dp"
                android:background="@drawable/settings"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_toEndOf="@id/setting_btn_menu"
                android:layout_centerVertical="true"/>
        </RelativeLayout>







    </RelativeLayout>

</LinearLayout>